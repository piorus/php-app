<div class="author">
    <h1 class="author__name">{{ author.firstName }} {{ author.lastName }}</h1>
    <p class="author__bio">{{ author.bio }}</p>
    {% if isAdmin %}
        <form id="deleteForm" action="/author/delete" method="POST">
            <input type="hidden" name="id" value="{{ author.id }}">
        </form>
    {% endif %}
    <div class="actions">
        <a href="/author?id={{ author.id }}">View</a>
        {% if isAdmin %}
            <a href="/author/update?id={{ author.id }}">Edit</a>
            <a href="#" class="delete">Delete</a>
        {% endif %}
    </div>
</div>