{% extends "layout/layout.twig" %}

{% block content %}
    {% include 'single/swipe.twig' %}
    <div class="comments">
        {% for comment in comments %}
            <div class="comment">
                <div class="comment__userNickname"><b>{{ comment.user.getNickname() }}</b> says:</div>
                <div class="comment__comment">{{ comment.getComment() }}</div>
            </div>
        {% endfor %}
        <textarea id="comment" class="form-control" placeholder="Comment"></textarea>
        <button class="w-50 btn btn-lg btn-primary" type="submit" id="addComment">Add Comment</button>
    </div>
{% endblock %}

{% block styles %}
    <link rel="stylesheet" href="/assets/css/swipe/single.css">
{% endblock %}

{% block scripts %}
    <script src="/assets/js/swipe/single.js" type="text/javascript"></script>
{% endblock %}